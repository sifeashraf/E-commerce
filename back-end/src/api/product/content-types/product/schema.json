{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "product_title": {
      "type": "string",
      "required": true
    },
    "product_description": {
      "type": "text",
      "required": true
    },
    "product_price": {
      "type": "decimal",
      "required": true
    },
    "product_rating": {
      "type": "decimal",
      "required": true
    },
    "product_img": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "product_category": {
      "type": "enumeration",
      "enum": [
        "women",
        "men"
      ]
    }
  }
}
